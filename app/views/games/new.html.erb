<h1>New Game</h1>
<% @letters.each do |letter| %>
<div class="letter"> <p> <%= letter %> </p></div>
<% end %>
<p> <%= @stringletters %></p>

<h4>What is the longest word you can find ? </h4>

<form action="/games/score">
  <input type="text" name="name" placeholder="Type it there ... ">
  <input type="submit" placeholder="Send">
  <input id="token" name="token" type="hidden" value="<%= @stringletters %>" />
</form>
